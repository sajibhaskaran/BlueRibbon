        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DisplayReview)
        </dt>

        <dd>
            <!-- Checkbox to set the Review display -->
            @Html.DisplayFor(model => model.DisplayReview)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            <!-- Displaying the Product Rating -->
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            <!-- Displaying the Email Address -->
