            @Html.DisplayNameFor(model => model.ReviewBody)
        </dt>

        <dd>
            <!-- Displaying the Review Body -->
            @Html.DisplayFor(model => model.ReviewBody)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WouldBuyAgain)
        </dt>

        <dd>
            <!-- Displaying whether or not the customer would buy the product again -->
            @Html.DisplayFor(model => model.WouldBuyAgain)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecToFriend)
        </dt>

        <dd>
            <!-- Displaying whether or not the customer would reccomend the product to a friend -->
            @Html.DisplayFor(model => model.RecToFriend)
        </dd>
        <hr />
        <hr />
    </dl>
